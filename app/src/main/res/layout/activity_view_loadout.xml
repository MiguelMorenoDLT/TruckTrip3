<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Loadout">

    <TextView
        android:id="@+id/Cargas"
        android:layout_width="69dp"
        android:layout_height="19dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="5dp"
        android:text="Your loads"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCarga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinnerCarga"
        android:layout_width="268dp"
        android:layout_height="27dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/FromEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cargas" />

    <Button
        android:id="@+id/RequeastTransportationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="420dp"
        android:text="Request Transportation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UntilEditText" />

    <EditText
        android:id="@+id/FromEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="From"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/UntilEditText"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCarga"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/UntilEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Until"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/RequeastTransportationButton"
        app:layout_constraintTop_toBottomOf="@+id/FromEditText"
        tools:layout_editor_absoluteX="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>