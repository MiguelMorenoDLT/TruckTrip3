<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripsDriver">

    <LinearLayout
        android:id="@+id/driverLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/FromText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travel information" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/FromText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From:" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/FromTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/UntilText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Until:" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/UntilTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CargaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load:" />
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CargaTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Cargabutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go for load" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>