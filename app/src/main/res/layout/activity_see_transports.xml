<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".See_transports">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/TripTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a trip" />

        <Spinner
            android:id="@+id/SpinnerTrips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/DriverTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a driver" />

        <Spinner
            android:id="@+id/SpinnerConductor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TruckTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a truck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Spinner
            android:id="@+id/SpinnerCamion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/AceptarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept" />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>